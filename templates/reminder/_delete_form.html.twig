<form method="post" action="{{ path('app_reminder_delete', {'id': reminder.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le rappel ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reminder.id) }}">
    <button class="btn mt-6 px-4 py-2 bg-caution hover:bg-red-700 text-white font-bold rounded-lg shadow-md transition duration-300 ease-in-out">Supprimer</button>
</form>
