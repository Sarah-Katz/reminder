<div class="flex justify-center mt-6">
  <form method="post" action="{{ path('app_category_delete', { id: category.id }) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer la catégorie ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}" />
    <button class="btn px-4 py-2 bg-caution hover:bg-red-700 text-white font-bold rounded-lg shadow-md transition duration-300 ease-in-out">Supprimer</button>
  </form>
</div>
